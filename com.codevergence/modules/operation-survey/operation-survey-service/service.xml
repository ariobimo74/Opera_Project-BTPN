<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_2_0.dtd">

<service-builder dependency-injector="ds" package-path="operation">
	<namespace>SurveyOperation</namespace>
	<!--<entity data-source="sampleDataSource" local-service="true" name="Foo" remote-service="false" session-factory="sampleSessionFactory" table="foo" tx-manager="sampleTransactionManager uuid="true"">-->
	<entity table="survey_operation" local-service="true" name="SurveyOperation" remote-service="true" uuid="false">

		<!-- PK fields -->

		<column db-name="id" name="id" primary="true" type="long" />

		<!-- Audit fields -->

		<column db-name="title" name="title" type="String" />
		<column db-name="description" name="description" type="String" />
		<column db-name="survey_obj" name="surveyObj" type="String" />
		<column db-name="start_date" name="startDate" type="Date" />
		<column db-name="end_date" name="endDate" type="Date" />
		<column db-name="submitted_date" name="submittedDate" type="Date"/>

		<!-- Order -->

		<order by="asc">
			<order-column name="id" />
			<order-column name="title"/>
		</order>

		<!-- Finder methods -->

		<finder name="Title" return-type="Collection">
			<finder-column name="title" />
		</finder>
		<finder name="EndDate" return-type="Collection">
			<finder-column name="endDate" />
		</finder>
	</entity>
	
	<entity table="questions" local-service="true" name="Questions" remote-service="true" uuid="false">
		<column db-name="id" name="id" primary="true" type="long" />
		<column db-name="question" name="question" type="String" />

		<order by="asc">
			<order-column name="id"/>
		</order>
	</entity>

	<entity table="answers" name="Answer" local-service="true" remote-service="true" uuid="false">
		<column db-name="id" name="id" type="long" primary="true" />
		<column db-name="answer" name="answer" type="String" />
		<column db-name="value" name="value" type="double" />

		<order by="asc">
			<order-column name="id"/>
		</order>
	</entity>

	<entity table="survey_object" name="SurveyObject" local-service="true" remote-service="true" uuid="false">
		<column db-name="id" name="id" type="long" primary="true" />
		<column db-name="name" name="name" type="String" />

		<order by="asc">
			<order-column name="id" />
		</order>
		<finder name="ObjectName" return-type="Collection">
			<finder-column name="name" />
		</finder>
	</entity>

	<exceptions>
		<exception>SurveyOperationSurveyObj</exception>
		<exception>SurveyOperationStartDate</exception>
		<exception>SurveyOperationEndDate</exception>
		<exception>QuestionsQuestion</exception>
	</exceptions>
</service-builder>
